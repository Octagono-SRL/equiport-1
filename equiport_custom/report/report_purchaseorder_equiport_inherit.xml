<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_purchaseorder_document_equiport_inherit"
                  inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//t/t/div[hasclass('page')]/p[@t-field='o.notes']" position="inside">
                <br/>
                <div class="text-muted">
                    <style>
                        table.recibido {position:relative; top:200px; margin-top:15px;width:100% !important;border:0px
                        !important; border-spacing: 10px !important; border-collapse: separate !important;}
                        table.recibido td {border:0px !important;border-top:2px solid black !important; background:none
                        !important; text-align:center !important; width:30% !important;}

                        table.recibido .spacing {
                        border:0px !important;border-top:2px solid white !important; background:none
                        !important; text-align:center !important; width:30% !important;
                        }
                    </style>
                    <table class="recibido"
                           border="0"
                           cellspacing="30">
                        <tr>
                            <td class="spacing"></td>
                            <td class="spacing" t-if="o.allowed_confirm_sign" name="signature">
                                <div class="">
                                    <img t-att-src="image_data_uri(o.allowed_confirm_sign)"
                                         style="max-height: 4cm; max-width: 8cm;"/>
                                </div>
                                <div class="text-center">
                                    <p t-field="o.allowed_confirm_signed_by"/>
                                    <p>
                                        Fecha: <span t-field="o.allowed_confirm_date_sign"/>
                                    </p>
                                </div>
                            </td>
                            <td class="spacing"></td>
                        </tr>
                        <tr>
                            <td>Preparado por</td>
                            <td>Aprobado por</td>
                            <td>Recibido por</td>
                        </tr>
                    </table>
                </div>

            </xpath>

        </template>

