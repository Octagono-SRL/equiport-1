<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_form_equiport_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.equiport.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <field name="partner_id" position="after">
                    <field name="is_gate_service" invisible="1"/>
                </field>

                <field name="currency_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>

                <field name="is_rental_order" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='name']"
                       position="attributes">
                    <attribute name="attrs">{'required': True}</attribute>
                </xpath>

                <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']"
                       position="before">
<!--                    <field name="stamp" attrs="{'column_invisible': [('parent.is_gate_service', '=', False)], 'required':[('parent.is_gate_service', '=', True)]}"/>-->
<!--                    <field name="boat" attrs="{'column_invisible': [('parent.is_gate_service', '=', False)], 'required':[('parent.is_gate_service', '=', True)]}"/>-->
<!--                    <field name="booking" attrs="{'column_invisible': [('parent.is_gate_service', '=', False)], 'required':[('parent.is_gate_service', '=', True)]}"/>-->
                    <field name="storage_rate" attrs="{'column_invisible': [('parent.is_gate_service', '=', False)], 'required':[('parent.is_gate_service', '=', True)]}"/>
                </xpath>


            </field>
        </record>


    </data>
</odoo>