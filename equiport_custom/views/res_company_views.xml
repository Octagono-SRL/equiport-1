<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_company_form_equiport_inherit" model="ir.ui.view">
            <field name="name">res.company.form.equiport.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='general_info']" position="after">
                    <page name="po_page" string="Pedidos de compras">
                        <div>
                            <label for="active_op_approval"/>
                            <field name="active_op_approval"/>
                        </div>
                        <group string="Niveles de aprobación" attrs="{'invisible':[('active_op_approval', '=', False)]}">
                            <group string="Nivel 1">
                                <field name="op_ini_level" string="Monto minimo" attrs="{'required':[('active_op_approval', '=', True)]}"/>
                                <field name="op_ini_user_id" string="Responsable" attrs="{'required':[('active_op_approval', '=', True)]}"/>
                            </group>
                            <group string="Nivel 2">
                                <field name="op_mid_level" string="Monto minimo" attrs="{'required':[('active_op_approval', '=', True)]}"/>
                                <field name="op_mid_user_id" string="Responsable" attrs="{'required':[('active_op_approval', '=', True)]}"/>
                            </group>
                            <group string="Nivel 3">
                                <field name="op_top_level" string="Monto minimo" attrs="{'required':[('active_op_approval', '=', True)]}"/>
                                <field name="op_top_user_id" string="Responsable" attrs="{'required':[('active_op_approval', '=', True)]}"/>
                            </group>
                        </group>
                        <group string="Responsables solicitudes de cancelación">
                            <group>
                                <field name="user_po_allow_cancel" string="Usuarios" widget="many2many_tags_email" attrs="{'required':True}" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </page>
                    <page name="so_page" string="Pedidos de ventas">
                        <group>
                            <group>
                                <field name="default_gate_service" attrs="{'required':True}" options="{'no_create': True, 'no_open': True}"/>
                                <field name="default_stock" attrs="{'required':True}" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </page>
                    <page name="sp_page" string="Conduces">
                        <group>
                            <group string="Encargados">
                                <field name="user_sp_access" string="Usuarios" widget="many2many_tags_email" attrs="{'required':True}" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </page>

                    <page name="rental_page" string="Alquiler">
                        <group>
                            <group string="Encargados">
                                <field name="user_rental_access" string="Usuarios" widget="many2many_tags_email" attrs="{'required':True}" options="{'no_create': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>